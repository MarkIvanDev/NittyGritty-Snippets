<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>RelayCommand with CanExecute</Title>
			<Shortcut>ngrelaycanexecute</Shortcut>
			<Description>Create a NittyGritty RelayCommand with CanExecute</Description>
			<Author>Mark Ivan Basto</Author>
			<HelpUrl>https://github.com/MarkIvanDev/NittyGritty-Snippets</HelpUrl>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Imports>
				<Import>
					<Namespace>NittyGritty.Commands</Namespace>
				</Import>
			</Imports>
			<Declarations>
				<Literal Editable="true">
					<ID>name</ID>
					<ToolTip>Name of the RelayCommand.</ToolTip>
					<Default>Run</Default>
				</Literal>
				<Literal Editable="true">
					<ID>canexecute</ID>
					<ToolTip>CanExecute delegate</ToolTip>
					<Default>true</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp" Kind="method decl">
				<![CDATA[
        private RelayCommand _$name$;
        public RelayCommand $name$Command => _$name$ ?? (_$name$ = new RelayCommand(
            () =>
            {
                $end$
            },
            () => $canexecute$));
        ]]>
			</Code>
		</Snippet>
	</CodeSnippet>
